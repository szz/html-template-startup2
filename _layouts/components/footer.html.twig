<div class="container-fluid bg-dark text-light mt-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="row gx-5">
            <div class="col-lg-4 col-md-6 footer-about">
                <div class="d-flex flex-column align-items-center justify-content-center text-center h-100 bg-primary p-4">
                    <a href="/" class="navbar-brand">
                        <h1 class="m-0 text-white"><i class="fa fa-user-tie me-2"></i>Startup</h1>
                    </a>
                    <p class="mt-3 mb-4">{{site.footer.slogan|default(page.footer.slogan|default(''))}}</p>
                    <form action="">
                        <div class="input-group">
                            <input type="text" class="form-control border-white p-3" placeholder="Your Email">
                            <button class="btn btn-dark">Sign Up</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-8 col-md-6">
                <div class="row gx-5">
                    <div class="col-lg-4 col-md-12 pt-5 mb-5">
                        <div class="section-title section-title-sm position-relative pb-3 mb-4">
                            <h3 class="text-light mb-0">Get In Touch</h3>
                        </div>
                        {% if site.contact.address %}
                            <div class="d-flex mb-2">
                                <i class="bi bi-geo-alt text-primary me-2"></i>
                                <p class="mb-0">{{ site.contact.address }}</p>
                            </div>
                        {% endif %}
                        {% if site.contact.email %}
                            <div class="d-flex mb-2">
                                <i class="bi bi-envelope-open text-primary me-2"></i>
                                <p class="mb-0">{{ site.contact.email }}</p>
                            </div>
                        {% endif %}
                        {% if site.contact.phone %}
                            <div class="d-flex mb-2">
                                <i class="bi bi-telephone text-primary me-2"></i>
                                <p class="mb-0">{{ site.contact.phone }}</p>
                            </div>
                        {% endif %}
                        <div class="d-flex mt-4">
                            {% if site.contact.twitter %}
                                <a class="btn btn-primary btn-square me-2" href="{{ site.contact.twitter }}"><i class="fab fa-x-twitter fw-normal"></i></a>
                            {% endif %}
                            {% if site.contact.facebook %}
                                <a class="btn btn-primary btn-square me-2" href="{{ site.contact.facebook }}"><i class="fab fa-facebook-f fw-normal"></i></a>
                            {% endif %}
                            {% if site.contact.linkedin %}
                                <a class="btn btn-primary btn-square me-2" href="{{ site.contact.linkedin }}"><i class="fab fa-linkedin-in fw-normal"></i></a>
                            {% endif %}
                            {% if site.contact.instagram %}
                                <a class="btn btn-primary btn-square" href="{{ site.contact.instagram }}"><i class="fab fa-instagram fw-normal"></i></a>
                            {% endif %}
                        </div>
                    </div>
                    {% for menu_item in site.footer.menu %}
                        <div class="col-lg-4 col-md-12 pt-0 pt-lg-5 mb-5">
                            <div class="section-title section-title-sm position-relative pb-3 mb-4">
                                <h3 class="text-light mb-0">{{ menu_item.label}}</h3>
                            </div>
                            <div class="link-animated d-flex flex-column justify-content-start">
                                {% for link in menu_item.items %}
                                    <a class="text-light mb-2" href="{{ link.url }}"><i class="bi bi-arrow-right text-primary me-2"></i>{{ link.label }}</a>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid text-white" style="background: #061429;">
    <div class="container text-center">
        <div class="row justify-content-end">
            <div class="col-lg-8 col-md-6">
                <div class="d-flex align-items-center justify-content-center" style="height: 75px;">
                    <p class="mb-0">&copy; <a class="text-white border-bottom" href="{{ site.company.url }}">{{ site.company.name }}</a>. All Rights Reserved.
                    Made with ❤️ by <a class="text-white border-bottom" href="https://digitalblood.eu">digitalblood</a> & designed by <a class="text-white border-bottom" href="https://htmlcodex.com">HTML Codex</a></p>
                </div>
            </div>
        </div>
    </div>
</div>